<%- include('layout') %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow">
  <h2 class="text-2xl font-semibold mb-4">Admin Signup</h2>
  <% if (message) { %>
    <div class="mb-4 text-red-600"><%= message %></div>
  <% } %>
  <form method="post" action="/admin-signup">
    <label class="block mb-2">Username</label>
    <input name="username" class="w-full p-2 border rounded mb-3" />

    <label class="block mb-2">Password</label>
    <input type="password" name="password" class="w-full p-2 border rounded mb-3" />

    <label class="block mb-2">Unique ID (college code)</label>
    <input name="unique_id" class="w-full p-2 border rounded mb-3" />

    <button class="px-4 py-2 bg-indigo-600 text-white rounded">Sign up</button>
  </form>
</div>

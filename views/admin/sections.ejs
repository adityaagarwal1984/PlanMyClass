<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Sections</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div id="notify-container"></div>
  <div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Sections</h1>
      <a href="/admin" class="text-blue-600">Back</a>
    </div>

    <% if (message) { %>
      <div class="bg-red-100 text-red-800 p-2 rounded mb-4"><%= message %></div>
    <% } %>

    <div class="bg-white p-4 rounded shadow mb-6">
      <h2 class="font-bold mb-2">Add Section</h2>
      <form method="post" action="/admin/sections/add" class="grid grid-cols-1 md:grid-cols-3 gap-2">
        <input name="name" placeholder="Section name (e.g., A)" class="border p-2" />
        <input name="year" placeholder="Year (1-4)" class="border p-2" />
        <div>
          <button class="bg-green-600 text-white p-2 rounded mt-2">Add</button>
        </div>
      </form>
    </div>

    <div class="bg-white p-4 rounded shadow">
      <h2 class="font-bold mb-2">Existing Sections</h2>
      <ul>
        <% sections.forEach(s => { %>
          <li class="border-b py-2 flex justify-between items-center">
            <div><%= s.name %> â€” Year <%= s.year %></div>
            <div>
              <button data-id="<%= s.id %>" data-type="section" class="delete-btn bg-red-500 text-white px-3 py-1 rounded">Delete</button>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
  <link rel="stylesheet" href="/css/notify.css">
  <script src="/js/admin.js"></script>
</body>
</html>

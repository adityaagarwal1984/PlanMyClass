<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Generate Timetable</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div id="notify-container"></div>
  <div class="container mx-auto px-4 py-6">
    <% 
      // defensive defaults to avoid template ReferenceErrors when some renders
      if (typeof assignMode === 'undefined') assignMode = false;
      if (typeof assignments === 'undefined') assignments = [];
      if (typeof sections === 'undefined') sections = [];
      if (typeof subjects === 'undefined') subjects = [];
      if (typeof faculty === 'undefined') faculty = [];
      if (typeof periods === 'undefined') periods = [];
      if (typeof selectedSection === 'undefined') selectedSection = null;
      if (typeof message === 'undefined') message = null;
      if (typeof days === 'undefined') days = ['Monday','Tuesday','Wednesday','Thursday','Friday','Saturday'];
    %>
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold"><%= assignMode ? 'Assign Subjects' : 'Generate Timetable' %></h1>
      <a href="/admin" class="text-blue-600">Back</a>
    </div>

    <% if (message) { %>
      <div class="bg-green-100 text-green-800 p-2 rounded mb-4"><%= message %></div>
    <% } %>

    <% if (assignMode) { %>
      <div class="bg-white p-4 rounded shadow mb-6">
        <h2 class="font-bold mb-2">Assign Subject to Faculty for a Section</h2>
        <form method="post" action="/admin/assign" class="grid grid-cols-1 md:grid-cols-4 gap-2">
          <select name="section_id" class="border p-2">
            <% sections.forEach(s => { %>
              <option value="<%= s.id %>"><%= s.name %> (Year <%= s.year %>)</option>
            <% }) %>
          </select>
          <select name="subject_id" class="border p-2">
            <% subjects.forEach(s => { %>
              <option value="<%= s.id %>"><%= s.name %></option>
            <% }) %>
          </select>
          <select name="faculty_id" class="border p-2">
            <% faculty.forEach(f => { %>
              <option value="<%= f.id %>"><%= f.name %></option>
            <% }) %>
          </select>
          <div>
            <button class="bg-blue-600 text-white p-2 rounded mt-2">Assign</button>
          </div>
        </form>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h2 class="font-bold mb-2">Existing Assignments</h2>
        <% if (assignments && assignments.length) { %>
          <table class="w-full table-auto">
            <thead>
              <tr>
                <th class="border p-2">Section</th>
                <th class="border p-2">Subject</th>
                <th class="border p-2">Faculty</th>
              </tr>
            </thead>
            <tbody>
              <% assignments.forEach(a => { %>
                <tr data-id="<%= a.id %>">
                  <td class="border p-2"><%= a.section_name %></td>
                  <td class="border p-2"><%= a.subject_name %></td>
                  <td class="border p-2 flex justify-between items-center">
                    <span><%= a.faculty_name %></span>
                    <button data-id="<%= a.id %>" data-type="assignment" class="delete-btn bg-red-500 text-white px-3 py-1 rounded">Delete</button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-gray-600">No assignments yet for any section.</p>
        <% } %>
      </div>
    <% } else { %>
      <div class="bg-white p-4 rounded shadow mb-6">
          <h2 class="font-bold mb-2">Generate Timetable for Section</h2>
          <form method="get" action="/admin/generate" class="grid grid-cols-1 md:grid-cols-2 gap-2">
            <select name="section_id" class="border p-2">
              <% sections.forEach(s => { %>
                <option value="<%= s.id %>" <%= selectedSection==s.id ? 'selected' : '' %>><%= s.name %> (<%= s.year ? ('Year ' + s.year) : '' %>)</option>
              <% }) %>
            </select>
            <div>
              <button class="bg-blue-600 text-white p-2 rounded mt-2">Load Subjects</button>
            </div>
          </form>
        </div>
    <% } %>

    <% if (selectedSection) { %>
        <div class="bg-white p-4 rounded shadow mt-4">
          <h3 class="font-bold mb-2">Actions for selected section</h3>
          <div class="flex items-center space-x-2 mb-4">
            <button data-id="<%= selectedSection %>" class="clear-timetable-btn bg-yellow-500 text-white px-3 py-1 rounded">Clear Timetable for this section</button>
          </div>

          <% if (typeof facultySubjects !== 'undefined' && facultySubjects && facultySubjects.length) { %>
            <form method="post" action="/admin/generate" class="space-y-4">
              <input type="hidden" name="section_id" value="<%= selectedSection %>">
              <div class="overflow-auto">
                <table class="w-full table-auto border-collapse">
                  <thead>
                    <tr>
                      <th class="border p-2">Subject</th>
                      <th class="border p-2">Assigned Faculty</th>
                      <th class="border p-2">Lecture Hours</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% facultySubjects.forEach(fs => { %>
                      <tr>
                        <td class="border p-2"><%= fs.subject_name %></td>
                        <td class="border p-2"><%= fs.faculty_name %></td>
                        <td class="border p-2">
                          <input type="number" name="hours_<%= fs.subject_id %>" min="0" value="1" class="w-24 border p-1" />
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <div class="mt-4 p-2 border rounded bg-gray-50">
                <label class="inline-flex items-center mr-6">
                  <input type="checkbox" name="technical_training_global" class="form-checkbox" />
                  <span class="ml-2">Include Technical Training (yes/no)</span>
                </label>
                <label class="inline-flex items-center">
                  <input type="checkbox" name="labs_global" class="form-checkbox" />
                  <span class="ml-2">Include Labs (yes/no)</span>
                </label>
              </div>

              <div>
                <button class="bg-blue-600 text-white p-2 rounded">Generate Timetable</button>
              </div>
            </form>
          <% } else { %>
            <div class="p-4 bg-yellow-50 border rounded">No subjects assigned to this section yet.</div>
          <% } %>
        </div>
    <% } %>

    <% if (!assignMode) { %>
      <% if (typeof generatedTimetables === 'undefined') generatedTimetables = []; %>
      <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Generated Timetables</h2>
        <% if (generatedTimetables.length === 0) { %>
          <div class="bg-white p-4 rounded shadow"><p class="text-gray-600">No timetables have been generated yet.</p></div>
        <% } %>
        <% generatedTimetables.forEach(gt => { %>
        <div class="bg-white p-4 rounded shadow mb-6">
          <h3 class="font-bold mb-2">Section: <%= gt.sectionName %></h3>
          <div class="overflow-auto">
            <table class="w-full table-auto border-collapse">
              <thead>
                <tr>
                  <th class="border p-2">Day / Period</th>
                  <% let pids = [];
                     if (typeof periods !== 'undefined' && periods && periods.length) {
                       pids = periods.map(p => p.id);
                     } else {
                       const firstDay = Object.keys(gt.grid)[0];
                       pids = firstDay ? Object.keys(gt.grid[firstDay]).map(k => parseInt(k)).sort((a,b)=>a-b) : [];
                     }
                  %>
                  <% pids.forEach(pid => { %>
                    <th class="border p-2 text-center">
                      <% if (typeof periods !== 'undefined' && periods && periods.length) {
                           const p = periods.find(pp => pp.id === pid);
                           if (p) { %>
                             <div class="text-xs text-gray-600"><%= p.label %> <br/><%= p.start_time %> - <%= p.end_time %></div>
                      <%     }
                         }
                      %>
                    </th>
                  <% }) %>
                </tr>
              </thead>
              <tbody>
                <% days.forEach(day => { %>
                  <tr>
                    <td class="border p-2 font-semibold"><%= day %></td>
                    <% pids.forEach(pid => { %>
                    <% 
                      const cell = (gt.grid[day] && gt.grid[day][pid]) || null;
                      const periodObj = (periods && periods.length) ? periods.find(pp => pp.id === pid) : null;
                      const plabel = periodObj && periodObj.label ? periodObj.label.toString().toLowerCase() : '';
                      let cellClass = '';
                      if (plabel.includes('lunch')) cellClass = 'bg-yellow-100';
                      else if (cell && cell.subject_name === 'Technical Training') cellClass = 'bg-blue-100';
                      else if (cell && (!cell.faculty_name || String(cell.faculty_name).trim() === '')) cellClass = 'bg-green-100';
                      else if (cell) cellClass = 'bg-red-100';
                    %>
                    <td class="border p-2 align-top <%= cellClass %>">
                      <% if (cell) { %>
                        <div class="font-bold"><%= cell.subject_name || 'â€”' %></div>
                        <div class="text-sm text-gray-600"><%= cell.faculty_name || '' %></div>
                      <% } else { %>
                        <div class="text-gray-400">-</div>
                      <% } %>
                    </td>
                    <% }) %>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <% }) %>
      </div>
    <% } %>

  </div>
  <link rel="stylesheet" href="/css/notify.css">
  <script src="/js/admin.js"></script>
</body>
</html>

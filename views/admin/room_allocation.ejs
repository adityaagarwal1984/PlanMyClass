<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Room Allocation</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Room Allocation</h1>
      <a href="/admin" class="text-blue-600">Back</a>
    </div>

    <div class="bg-white p-4 rounded shadow">
      <h2 class="font-bold mb-4">Lab Schedules</h2>
      <% if (!labsData || labsData.length === 0) { %>
        <div class="p-4 bg-yellow-50 rounded">No lab allocations found.</div>
      <% } else { %>
        <% labsData.forEach(l => { %>
          <div class="mb-8">
            <h3 class="font-semibold mb-2">Lab <%= l.labId %></h3>
            <div class="overflow-auto bg-white border rounded">
              <% if (periods && periods.length) { %>
                <table class="w-full table-auto">
                  <thead>
                    <tr class="bg-gray-100">
                      <th class="border p-2">Day</th>
                      <% periods.forEach(p => { %>
                        <th class="border p-2 text-center"><%= p.label %>
                          <div class="text-xs text-gray-600"><%= p.start_time.slice(0,5) %> - <%= p.end_time.slice(0,5) %></div>
                        </th>
                      <% }) %>
                    </tr>
                  </thead>
                  <tbody>
                    <% days.forEach(day => { %>
                      <tr>
                        <td class="border p-2 font-medium"><%= day %></td>
                        <% periods.forEach(p => { %>
                          <% const cell = (l.grid[day] && l.grid[day][p.id]) || null; %>
                          <td class="border p-2 text-center <%= cell ? 'bg-green-50' : '' %>">
                            <% if (p.label.toLowerCase().includes('lunch')) { %>
                              &mdash;
                            <% } else if (cell) { %>
                              <div class="font-medium"><%= cell.subject_name %></div>
                              <div class="text-sm text-gray-600"><%= cell.section %></div>
                            <% } else { %>
                              &mdash;
                            <% } %>
                          </td>
                        <% }) %>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              <% } else { %>
                <div class="p-4">No periods defined. Show raw allocations instead.</div>
              <% } %>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>

<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Student Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold mb-4">Student Dashboard</h1>
    <a href="/">Home</a>

    <div class="bg-white p-4 rounded shadow mt-4">
      <form method="post" action="/student/dashboard" class="flex gap-2">
        <select name="section_id" class="border p-2">
          <% sections.forEach(s => { %>
            <option value="<%= s.id %>"><%= s.name %> (Year <%= s.year %>)</option>
          <% }) %>
        </select>
        <button class="bg-blue-600 text-white p-2 rounded">View Timetable</button>
      </form>
    </div>

    <% if (periods && periods.length) { %>
      <div class="bg-white p-4 rounded shadow mt-4 overflow-x-auto">
        <h2 class="font-bold mb-2">Timetable</h2>
        <table class="w-full table-auto">
          <thead>
            <tr>
              <th class="border p-2">Day</th>
              <% periods.forEach(p => { %>
                <th class="border p-2 text-center">
                  <div><%= p.label %></div>
                  <div class="text-sm text-gray-600"><%= p.start_time.slice(0,5) %> - <%= p.end_time.slice(0,5) %></div>
                </th>
              <% }) %>
            </tr>
          </thead>
          <tbody>
            <% days.forEach(day => { %>
              <tr>
                <td class="border p-2 font-medium"><%= day %></td>
                <% periods.forEach(p => {
                     const cell = (grid[day] && grid[day][p.id]) || null;
                %>
                  <td class="border p-2 text-center">
                    <% if (cell) { %>
                      <div class="font-medium"><%= cell.subject_name %></div>
                      <div class="text-sm text-gray-600"><%= cell.faculty_name || '' %></div>
                    <% } else { %>
                      &mdash;
                    <% } %>
                  </td>
                <% }) %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="bg-white p-4 rounded shadow mt-4">
        <h2 class="font-bold mb-2">Faculty & Subject List</h2>
        <ul>
          <% facultySubjects.forEach(fs => { %>
            <li><%= fs.subject_name %> â€” <%= fs.faculty_name %></li>
          <% }) %>
        </ul>
      </div>
    <% } else if (timetable && timetable.length) { %>
      <!-- fallback: no periods seeded, show old format -->
      <div class="bg-white p-4 rounded shadow mt-4">
        <h2 class="font-bold mb-2">Timetable</h2>
        <table class="w-full table-auto">
          <thead>
            <tr>
              <th class="border p-2">Day</th>
              <th class="border p-2">Period</th>
              <th class="border p-2">Subject</th>
              <th class="border p-2">Faculty</th>
            </tr>
          </thead>
          <tbody>
            <% timetable.forEach(row => { %>
              <tr>
                <td class="border p-2"><%= row.day %></td>
                <td class="border p-2"><%= row.period %></td>
                <td class="border p-2"><%= row.subject_name || '---' %></td>
                <td class="border p-2"><%= row.faculty_name || '---' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>

<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Faculty Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Faculty Dashboard</h1>
      <div><a href="/logout" class="text-red-600">Logout</a></div>
    </div>

    <div class="bg-white p-4 rounded shadow">
      <h2 class="font-bold mb-2">Your Timetable â€” <%= facultyName %></h2>
      <% if (timetable && timetable.length) { %>
        <table class="w-full table-auto">
          <thead>
            <tr>
              <th class="border p-2">Day</th>
              <th class="border p-2">Period</th>
              <th class="border p-2">Subject</th>
              <th class="border p-2">Section</th>
            </tr>
          </thead>
          <tbody>
            <% timetable.forEach(row => { %>
              <tr>
                <td class="border p-2"><%= row.day %></td>
                <td class="border p-2"><%= row.period %></td>
                <td class="border p-2"><%= row.subject_name || '---' %></td>
                <td class="border p-2"><%= row.section_name || '---' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No timetable assigned yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>

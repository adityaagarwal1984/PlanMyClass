<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow w-full max-w-md">
      <h2 class="text-xl font-bold mb-4">Login</h2>
      <% if (error) { %>
        <div class="bg-red-100 text-red-700 p-2 rounded mb-2"><%= error %></div>
      <% } %>
      <form method="post" action="/login">
        <label class="block mb-2">Role</label>
        <select name="role" class="w-full mb-4 border p-2">
          <option value="faculty">Faculty</option>
          <option value="admin">Admin</option>
        </select>
        <label class="block mb-2">Username</label>
        <input name="username" class="w-full border p-2 mb-4" />
        <label class="block mb-2">Password</label>
        <input name="password" type="password" class="w-full border p-2 mb-4" />
        <button class="w-full bg-blue-600 text-white p-2 rounded">Login</button>
      </form>
    </div>
  </div>
</body>
</html>
